<?xml version="1.0" encoding="utf-8"?>
<s:PopUpAnchor xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:view="edu.isi.bmkeg.digitalLibrary.citations.view.*">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->

		<mx:Sequence id="showForm">
			<mx:SetPropertyAction target="{this}" 
								  name="displayPopUp" 
								  value="true"/>
			<s:Scale target="{popUp}" 
					 scaleXFrom=".1" 
					 scaleXTo="1" 
					 duration="200"/>
		</mx:Sequence>
		
		<mx:Sequence id="hideForm">
			<s:Scale target="{popUp}" 
					 scaleXFrom="1" 
					 scaleXTo=".1" 
					 duration="200"/>
			<mx:SetPropertyAction target="{this}" 
								  name="displayPopUp" 
								  value="false"/>
		</mx:Sequence>

	</fx:Declarations>

	<fx:Script>
		<![CDATA[

			public function get form():ArticleCitationEditorView
			{
				return ArticleCitationEditorView(popUp);	
			}
			
			public function openForm():void
			{
				showForm.play();
			}
			
			public function closeForm():void
			{
				hideForm.play();
			}
			
		]]>
	</fx:Script>
	<view:ArticleCitationEditorView />

</s:PopUpAnchor>
